<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref_upd_curr_vals"
        android:title="Show Currency Values"
        android:summary="Shows the values of all cryptocurrencies entered"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="pref_night_mode"
        android:title="Enable night mode"
        android:defaultValue="false"/>


    <ListPreference
        android:key="pref_list"
        android:title="Select Special Exchanges"
        android:entries="@array/exchanges"
        android:entryValues="@array/exchanges"
        />


</PreferenceScreen>